//This class holds any general or most used methods
import java.util.Scanner;
public class GeneralMethods
{//////////////////////////////////////////////////////////////////////////////////////////////////////////// Start of GeneralMethods class
	private Scanner scan = new Scanner(System.in);/////////////////////////////////////////////////////////// System.in scanner
	private String menuAnswer;/////////////////////////////////////////////////////////////////////////////// Answer placeholder

	public GeneralMethods()////////////////////////////////////////////////////////////////////////////////// Default Constructor
	{//////////////////////////////////////////////////////////////////////////////////////////////////////// 
		menuAnswer = "no";/////////////////////////////////////////////////////////////////////////////////// 
	}//////////////////////////////////////////////////////////////////////////////////////////////////////// End of Default Constructor





	public String promptUser()/////////////////////////////////////////////////////////////////////////////// This method Prompts the User and converts
	{//////////////////////////////////////////////////////////////////////////////////////////////////////// the answer into a single character
		menuAnswer = scan.next();////////////////////////////////////////////////////////////////////////////
		menuAnswer = menuAnswer.toUpperCase();/////////////////////////////////////////////////////////////// 
		menuAnswer = menuAnswer.substring(0,1);////////////////////////////////////////////////////////////// 
		return menuAnswer;/////////////////////////////////////////////////////////////////////////////////// 
	}//////////////////////////////////////////////////////////////////////////////////////////////////////// promptUser() End.
	





	public void checkClass()
	{
		System.out.println("This class works fine");
	}






}//////////////////////////////////////////////////////////////////////////////////////////////////////////// End of GeneralMethods class
